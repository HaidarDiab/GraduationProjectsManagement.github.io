@page "/DisplayMailDetails/{MailId:int}/{buttonId}"
@inherits DisplayMailDetailsBase
@attribute [Authorize]

<div class="mb-5 form-group">
    <h5 class="shadow-lg card-header">تفاصيل الإيميل</h5>

    <hr class="shadow-lg" />
</div>


@if (ButtonId == "SentMails") 
{
    <div class="container container-md card shadow col-md-8">


        <div class="card shadow">
            <div class="card-header">
                <p class="custom-float-child-right card card-header shadow ">إلى</p>
                <p class="card card-header shadow custom-float-child-left text-primary text-lg-end">@SentMail.To</p>

            </div>

            <div class="card-header shadow">
                <p class="card  shadow alert-warning custom-float-child-right">الموضوع</p>
                <p class="card shadow alert-warning custom-float-child-left text-sm-end">@SentMail.Subject</p>

            </div>
            <div class="card-header shadow">
                <p class="card card-body shadow custom-float-child-right">المحتوى</p>
                <p class="card card-body shadow custom-float-child-left text-md-end">@SentMail.Body</p>
            </div>
        </div>

        <div class="form-group mb-5">
            <a class="btn btn-dark btn-outline-warning" @onclick="Cancel">رجوع</a>
        </div>

    </div>
}


else 
{
    <div class="container container-md card shadow col-md-8">


        <div class="card shadow">
            <div class="card-header">
                <p class="custom-float-child-right card card-header shadow ">من</p>
                <p class="card card-header shadow custom-float-child-left text-primary text-lg-end">@ReceivedMail.From</p>

            </div>

            <div class="card-header shadow">
                <p class="card  shadow alert-warning custom-float-child-right">الموضوع</p>
                <p class="card shadow alert-warning custom-float-child-left text-sm-end">@ReceivedMail.Subject</p>

            </div>
            <div class="card-header shadow">
                <p class="card card-body shadow custom-float-child-right">المحتوى</p>
                <p class="card card-body shadow custom-float-child-left text-md-end">@ReceivedMail.Body</p>
            </div>
        </div>

        <div class="form-group mb-5">
            <a class="btn btn-dark btn-outline-warning" @onclick="Cancel">رجوع</a>
        </div>

    </div>
}