@page "/DisplayProject"
@inherits DisplayProjectsBase
@attribute [Authorize]


    @foreach (var item in Projects)
    {
    <div class="col-md-3 mb-2">
        <a href="/ProjectDetails/@item.Id">
            <div class="card">
                <img class="img-thumbnail" src="data:image/*;base64, @(Convert.ToBase64String(item.ImageFile))" />
                <div class="card-body">
                    <b>@item.Title</b>
                </div>
            </div>
        </a>

    </div>
    }
