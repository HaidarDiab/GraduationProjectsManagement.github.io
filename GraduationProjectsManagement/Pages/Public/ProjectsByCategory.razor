@*@page "/ProjectsByCategory/{CategoryId:int}"*@
@page "/ProjectsByCategory"
@attribute [Authorize]


@inherits ProjectsByCategoryBase

@if(Projects == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if(ErrorMessage != null)
{
    <DisplayError ErrorMessage = "@ErrorMessage" />
}
else
{
    <h3>Projects (@CategoryName)</h3>
   
    @if(Projects.Count() > 0)
    {
        <div class = "row mt-3">
          <DisplayProjects Projects = "@Projects"></DisplayProjects>
        </div>
    }

}